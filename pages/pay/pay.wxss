image {
  width: 100%;
  height: 100%;
}

/* 收货地址 */

.address {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 30rpx;
  border-bottom: 3px solid #ff2b49;
}

/* 购物车 */

.list {
  background-color: #fff;
  box-sizing: border-box;
  width: 100%;
}

.list text {
  display: block;
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 1px solid #ccc;
}

.list .content {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  padding: 20rpx;
}

.list .content .img {
  width: 220rpx;
  height: 220rpx;
  padding: 0 10rpx;
  border-bottom: 1px solid #eee;
}

.list .content .img image {
  width: 100%;
  height: 100%;
}

.list .content .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 10rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}

.list .content .info .name {
  margin-top: 20rpx;
  box-sizing: border-box;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 32rpx;
}

.list .content .info .num {
  display: flex;
  justify-content: space-between;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.list .content .info .num .price {
  color: #ff2b49;
  font-size: 32rpx;
  font-weight: bold;
}

.list .content .info .num .amount {
  display: flex;
}

/* 结算栏 */

.account {
  box-sizing: border-box;
  background-color: #fff;
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  font-size: 36rpx;
}

.account .total {
  padding: 20rpx;
  color: #ff2b49;
  font-weight: bold;
  box-sizing: border-box;
}

.account .total text {
  color: #333;
  font-weight: 400;
}

.account .toBill {
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  text-align: center;
  background-color: #ff2b49;
  color: #fff;
  position: relative;
}

.getInfo {
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  text-align: center;
  background-color: #ff2b49;
  color: #fff;
  width: 100% !important;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
}

.space2 {
  flex: 1;
}

/* 填充 */

.space {
  width: 100%;
  height: 200rpx;
}
