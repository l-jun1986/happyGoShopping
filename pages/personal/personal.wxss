page {
  background-color: #eee;
  color: #888;
  font-size: 28rpx;
}

/* 头像 */

.header {
  width: 750rpx;
  height: 500rpx;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.blur {
  z-index: 1;
  position: absolute;
  left: -40rpx;
  top: -20rpx;
  width: 120%;
  height: 120%;
  filter: blur(10px);
  -webkit-filter: blur(10px);
  -ms-filter: blur(10px);
  -moz-filter: blur(10px);
}

.photo {
  z-index: 100;
  width: 160rpx;
  height: 160rpx;
  border-radius: 160rpx;
}

.header text {
  z-index: 100;
  color: #fff;
  font-weight: bold;
  margin: 80rpx;
}

/* 订单 */

.order {
  margin: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.myOrder {
  border-bottom: 1px solid #ddd;
  padding: 30rpx 20rpx;
}

.order .cate {
  display: flex;
}

.order .cate image {
  width: 50rpx;
  height: 50rpx;
}

.order .cate>view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

/* 客服 */

.service {
  margin: 0 30rpx;
  background-color: #fff;
}

.service>view {
  border-bottom: 2px solid #ddd;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}

button {
  width: 100% !important;
  height: 100%1 !important;
  opacity: 0;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}

/* 推荐 */

.share {
  margin: 30rpx;
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}
/* 填充 */

.space {
  width: 100%;
  height: 100rpx;
}
