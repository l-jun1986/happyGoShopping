/* pages/cate/cate.wxss */
scroll-view{
  width:fit-content;
}
.content{
  display: flex;
}
/* 左边栏 */

.left {
  height:calc(100vh - 200rpx);
}

.cate1 {
  width: 200rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #ddd;
  background-color: #eee;
  box-sizing: border-box;
}

.cate1 .text {
  padding: 10rpx;
  font-weight: 600;
  font-size: 33rpx;
  color: #444;
  text-align: center;
}

.active {
  background-color: #fff;
}

.active1 {
  border-left: 5px solid #ff2b49;
  color: #ff2b49 !important;
}

/* 展示区 */

.right {
  flex:1;
  z-index: 10;
  height: calc(100vh - 200rpx);
}

.right .top {
  text-align: center;
  padding: 31rpx;
  color: #ff2b49;
  font-weight: bold;
}

.right .top text {
  color: #ccc;
}

.right .brandsView {
  overflow: hidden;
}

.right .brandsView .brands{
float:left;
padding:30rpx;
height:145rpx;
}

.right .brandsView .brands image {
  width: 120rpx;
  height: 120rpx;
}

.right .brandsView .brands .name{
  text-align: center;
  font-size: 28rpx;
  width: 120rpx;
}