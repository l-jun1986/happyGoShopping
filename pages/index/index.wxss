/**index.wxss**/

image {
  width: 100%;
  height: 100%;
}

/* 轮播图 */

swiper {
  width: 750rpx;
  height: 360rpx;
}

/* 标签栏 */

.tabs {
  display: flex;
  padding:5rpx 0 20rpx 0;
}

.tabs view {
  padding:20rpx;
  height: 180rpx;
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  font-size: 14px;
  color:#666;
}

.space {
  width: 100%;
  flex: 1;
}

/* 展示区 */
.title{
  width: 100%;
  height:65rpx;
}

.content{
  padding:20rpx;
  height:400rpx;
}

.content image{
  width:31%;
  float:left;
  padding-right:10rpx;
  height:49%;
  margin-bottom:10rpx
}
.content image:first-child{
  height: 100%
}

